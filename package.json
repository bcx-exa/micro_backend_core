{
  "name": "micro-base-core",
  "version": "1.0.0",
  "description": "Boilerplate for building a micro-service",
  "main": "src/app.ts",
  "scripts": {
    "dev": "eslint . --ext .ts && nodemon",
    "offline": "eslint . --ext .ts && serverless offline start",
    "tsoa": "tsoa spec-and-routes",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "deploy:dev": "sls deploy --config cicd/resources/acm.serverless.yml --stage dev && sls deploy --stage dev",
    "deploy:uat": "sls deploy --config cicd/resources/acm.serverless.yml --stage uat && sls deploy --stage uat",
    "deploy:prod": "sls deploy --config cicd/resources/acm.serverless.yml --stage prod && sls deploy --stage prod"
  },
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/shelljs": "^0.8.8",
    "@types/swagger-ui-express": "^4.1.2",
    "aws-lambda": "^1.0.6",
    "aws-xray-sdk": "^3.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.4",
    "serverless-http": "^2.5.0",
    "shelljs": "^0.8.4",
    "source-map-support": "^0.5.10",
    "swagger-express-ts": "^1.0.1",
    "swagger-ui-express": "^4.1.4",
    "tsoa": "^3.2.1",
    "typescript-rest": "^3.0.1",
    "typescript-rest-swagger": "^1.1.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.17",
    "@types/jest": "^26.0.10",
    "@types/node": "^10.17.28",
    "@types/serverless": "^1.72.5",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "fork-ts-checker-webpack-plugin": "^3.0.1",
    "jest": "^26.4.0",
    "jest-cli": "^26.0.1",
    "jest-html-reporter": "^3.1.3",
    "serverless-domain-manager": "^4.2.0",
    "serverless-offline": "^6.5.0",
    "serverless-webpack": "^5.2.0",
    "ts-jest": "^26.2.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "webpack": "^4.29.0",
    "webpack-node-externals": "^1.7.2"
  },
